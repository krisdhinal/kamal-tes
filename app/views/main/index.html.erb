<div class="container">
  <div class="row" style="column-count: 4; column-gap: 10px;">
    <% @posts.each do |post| %>
      <div class="col mb-4" style="break-inside: avoid;">
        <div class="card">
          <%# Hide image section until we have image field %>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= truncate(post.body, length: 100) %></p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted"><%= time_ago_in_words(post.created_at) %> ago</small>
              <%= link_to 'Read More', post_path(post), class: "btn btn-sm btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
